<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_seat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/seat_pcName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pcName"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/seat_pcName"
        />
    <ImageView
        android:id="@+id/seat_image"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/seat_pcName"
        />

    <TextView
        android:id="@+id/seat_event"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@id/seat_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        />



</RelativeLayout>