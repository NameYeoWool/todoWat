<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_events_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/events_title"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Event"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layout_bg"
            />


        <TextView
            android:id="@+id/events_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/events_title"
            android:text="테스트 중입니다."
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/events_title_game"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/events_content"
            android:gravity="center"
            android:text="이벤트 및 대회"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layout_bg"
            />

    </RelativeLayout>

</RelativeLayout>